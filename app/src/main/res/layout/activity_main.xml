<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.nju.cocr.MainActivity">

    <com.nju.cocr.view.ScribbleView
        android:id="@+id/scribble_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/menu_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="32dp"
        app:fab_addButtonColorNormal="@android:color/white"
        app:fab_addButtonColorPressed="@color/white_pressed"
        app:fab_addButtonPlusIconColor="@color/half_black"
        app:fab_expandDirection="left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/exchange_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@android:color/white"
            app:fab_colorPressed="@color/white_pressed"
            app:fab_icon="@drawable/exchange_icon" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/ocr_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@android:color/white"
            app:fab_colorPressed="@color/white_pressed"
            app:fab_icon="@drawable/ocr_icon" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/cls_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@android:color/white"
            app:fab_colorPressed="@color/white_pressed"
            app:fab_icon="@drawable/cls_icon" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/eraser_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@android:color/white"
            app:fab_colorPressed="@color/white_pressed"
            app:fab_icon="@drawable/eraser_icon" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/pen_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@android:color/white"
            app:fab_colorPressed="@color/white_pressed"
            app:fab_icon="@drawable/pen_icon" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fab_colorNormal="@android:color/white"
            app:fab_colorPressed="@color/white_pressed"
            app:fab_icon="@drawable/save_button_image" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</androidx.constraintlayout.widget.ConstraintLayout>